<div class="center hero-unit">
  <% provide(:title, 'Invite Player') %>
  <h2>Invite a new player</h2>

  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.submit 'Invite Player' %>
      </div>
  <% end %>

</div>

